{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-o",
                "build/main.out",
                "main.cpp",
                "rpc-server.cpp",
                "logger.cpp",
                "-lpthread",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ]
}